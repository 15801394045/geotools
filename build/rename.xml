<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="Rename" default="rename">
  
  <target name="rename" depends="code, readme"
          description="Update the version references in code and readme"
   />
  
  <target name="code">
    <replace dir="..">
      <include name="**/pom.xml"/>
      <include name="**/GeoTools.java"/>
      <include name="**/common.py"/>
      <replacefilter token="18-SNAPSHOT" value="18-beta"/>
    </replace>
  </target>
  
  <target name="readme">
    <replace file="../README.html">
      <replacefilter token="@RELEASE@" value="18-beta"/>
      <replacefilter token="@DATE@" value="Sep 12, 2017"/>
    </replace>
  </target>

</project>

